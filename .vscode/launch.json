    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ubuntu: Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/code/bin/server",
            "args": [ "6969" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        
        {
            "name": "Ubuntu: TCP Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/code/bin/client_tcp",
            "args": ["127.0.0.1", "7070"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Ubuntu: UDP Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/code/bin/client_udp",
            "args": ["127.0.0.1", "7073"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}